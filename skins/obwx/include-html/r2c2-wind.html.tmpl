<div class='row g-0'>
    <!-- Wind Direction / Compass Rose -->
    <div class='col-6 wind-grid'>
        <div class='wind-rose-container pt-2'>
            <canvas id='rose' width='150' height='150'></canvas>
        </div>
        <div class='wind-arrow-container rose-arrow'>
            <canvas id='rose-arrow' width='150' height='150'></canvas>
        </div>
        <div class='wind-text-container'>
            <div class='wind-direction-deg'>--</div>
        </div>
    </div>
    <!-- Wind Speed-o-Meter -->
    <div class='col-6 g-0 pt-4'>
        <div class='position-relative'>
            <div class='wind-meter mx-auto'></div>
            <div class='wind-speed-mph'>---</div>
            <div class='windometer-tickmark'></div>
            <div class='windometer-tickmark'></div>
            <div class='windometer-tickmark'></div>
            <div class='windometer-tickmark-recentHi'></div>
            <div class='windometer-arrow'></div>
        </div>
        <div>
            <span class='windometer-legend-hi'>--</span>
        </div>
        <div class='pt-2'>
            <span class='windSpd-20minMax'>--</span>
        </div>
    </div>
    <!-- Wind Stats Left -->
    <div class='col-6'>
        <span class='windDir-20minAvg'>--</span>
        <span class='windSpd-20minAvg'>--</span>
        <br>
        <span> Average Wind </span>
    </div>
    <!-- Wind Stats Right -->
    <div class='col-6'>
        <span class='wind-max'>--</span>
        <span> at </span>
        <span class='wind-max-time'>--</span>
        <br>
        <span class='wind-max-title'> Highest Wind </span>
    </div>
</div>
